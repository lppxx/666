using namespace std;
 
int main()
{    
    float n1, n2, n3;
 
    cout << "3 sayi giriniz: ";
    cin >> n1 >> n2 >> n3;
 
    if(n1 >= n2 && n1 >= n3)
    {
        cout << "En buyuk sayi: " << n1;
    }
 
    if(n2 >= n1 && n2 >= n3)
    {
        cout << "En buyuk sayi: " << n2;
    }
 
    if(n3 >= n1 && n3 >= n2) {
        cout << "En buyuk sayi: " << n3;
    }
 
    return 0;
}
